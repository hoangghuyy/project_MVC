									<button id="show-register" class="btn-register">Tạo tài khoản</button>
								</div>
							</div>
						</div>

						<!-- Register Popup -->
						<div id="register-popup" class="account-popup" style="display:none">
							<div class="popup-content">
								<h2>TẠO TÀI KHOẢN</h2>

								<form id="register-form">
									<div class="form-group">
										<label for="register-name">Họ tên</label>
										<input type="text" name="Name" id="register-name" placeholder="Nhập họ tên" required>
									</div>

									<div class="form-group">
										<label for="register-phone">Số điện thoại</label>
