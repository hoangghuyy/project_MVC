@using project_mvc.Helpers
@using project_mvc.Models
@model project_mvc.ViewModels.BannerViewModel

<header>
	<div class="header-top">
		<div class="container">
			<div class="bottom">
				@if (Model.ListLogos != null && Model.ListLogos.Any())
				{
					@foreach (var item in Model.ListLogos)
					{
						if (!string.IsNullOrEmpty(item.LinkUrl))
						{
							<a href="@item.LinkUrl" class="logo img" title="@item.Name">
								<span class="img-logo">
									<img src="@item.UrlPicture" alt="@item.Name" />
								</span>
								<span>
									<span>@item.Name</span>
									<span>@item.Title</span>
								</span>
							</a>
						}
						else
						{
							<div class="logo img">
								<span class="img-logo">
									<img src="@item.UrlPicture" alt="@item.Name" />
								</span>
								<span>
									<span>@item.Name</span>
									<span>@item.Title</span>
								</span>
							</div>
						}

					}
				}
				<div class="search-h-top">
					<form action="/tim-kiem" method="post" id="Search" class="search-header">
						<label for="SearchAuto"
							   style="display:none"></label> <input name="q" autofocus=""
																	class="form-control notvalid ui-autocomplete-input" placeholder="Bạn tìm gì?" required=""
																	id="SearchAutoBottom" autocomplete="off"> <button role="button" aria-label="search">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
								 class="bi bi-search" viewBox="0 0 16 16">
								<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0">
								</path>
							</svg>
						</button>
					</form>
				</div>
				<div class="header-right d-flex" style="gap: 30px; align-items: center;">
