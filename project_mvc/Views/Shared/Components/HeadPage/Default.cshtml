				@if (Model.ListPositionContent != null && Model.ListPositionContent.Any())
				{
					@foreach (var menu in Model.ListPositionContent)
					{
						<ul class="menu" style="margin-bottom: 0">
							@if (Model.ListContent != null && Model.ListContent.Any())
							{
								@foreach (var item in Model.ListContent.Where(x => x.ParentId == 0))
								{
									<li>
										<a href="@(!string.IsNullOrEmpty(item.NameAscii) ? $"/{item.NameAscii}" : item.LinkUrl)"
										   target="_self"
										   title="@item.Name">
											@item.Name
										</a>
