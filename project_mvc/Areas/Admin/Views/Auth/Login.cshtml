                                  transform="rotate(45 61.9355 138.545)" fill="#3B8AFF" />
                            <rect x="62.3154" y="-190.173" width="543" height="77.5714" rx="38.7857"
                                  transform="rotate(45 62.3154 -190.173)" fill="#3B8AFF" />
                        </g>
                    </svg>
                </div>
            </div>
            <div class="col-md-6 d-md-block d-none bg-primary p-0 mt-n1 vh-100 overflow-hidden">
                <img src="~/Admin/images/auth/01.png" class="img-fluid gradient-main animated-scaleX"
                     alt="images">
            </div>
        </div>
    </section>
</div>

<script>
    $(() => {
        const form = $("#form-login");

        form.validate({
            rules: {
                UserName: {
                    required: true
                },
                Password: {
                    required: true
                }
            },
            messages: {
                UserName: {
                    required: "Tài khoản bắt buộc nhập."
                },
                Password: {
                    required: "Mật khẩu bắt buộc nhập."
                }
            },
            submitHandler: function () {
                debugger
                let formData = form.serialize();
                // $.post("/@WebConfig.AdminAlias/Public/LoginAction", function (data) {
                //     debugger
                //     if (data.Url != null) {
                //         window.location.href = data.Url;
                //     }
                // }).fail(function () {
                //     console.log("tai that bai")
                // });
                $.ajax({
                    "url": "/Admincms/Public/LoginAction",
                    "method": "POST",
                    "data": formData
                }).done(function (response) {
                    if (response.url != null) {
                        window.location.href = response.url;
                    }
                });
                return false;
            }
        })

    })
</script>